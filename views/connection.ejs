<!doctype html>
<html lang="en">
   <head>
      <%- include('partials/meta.ejs'); -%>
   </head>
   <body>
      <%- include('partials/header.ejs'); -%> 
      <main>
         <%- include('partials/navigation.ejs'); -%>
         <aside id="connection-details">
            <h3><%- connection.name -%></h3>
            <img id="profileImg" src="/img/coach.png" alt="this should appear">
            <p><%- connection.type -%></p>
            <p><%- connection.dateTime -%></p>
         </aside>
         <article>
            <p><%- connection.details -%></p>
         </article>
         <form method="POST">
            <!-- Connection Data -->
            <input type="hidden" name="connectionID" value="<%= connection.id %>">
            <input type="hidden" name="name" value="<%= connection.name %>">
            <input type="hidden" name="type" value="<%= connection.type %>">
            <input type="hidden" name="dateTime" value="<%= connection.dateTime %>">
            <input type="hidden" name="details" value="<%= connection.details %>">  


            <button  class="green" formaction="user/savedConnections/yes" 
                                                      type="submit">I'm In!</button>
            <button class="red" formaction="user/savedConnections/no"
                                                      type="submit">No Thanks</button>
            <button class="blue" formaction="user/savedConnections/maybe"
                                                      type="submit">Maybe</button>
         </form>
      </main>
      <%- include('partials/footer.ejs'); -%>
   </body>
</html>